<%- include ('./partials/header.ejs') -%>
    <div class="table-wrapper">
        <% if (portfolio.length > 0) {%>
            <h1 class="text-center">Edit Portfolio</h1><br><br><br>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Project</th>
                        <th scope="col">Description</th>
                        <th scope="col">Update</th>
                    </tr>
                </thead>
                <tbody>
                    <% portfolio.forEach((portfolio, index) => { %>
                        <tr>
                            <th scope="row"><%= portfolio.portfolio_id %></th>
                            <td><img src="/assets/img/<%= portfolio.portfolio_img %>" class="rounded-circle portfolio-img" alt="Job Logo" height="40px" width="40px"></td>
                            <td><%= portfolio.project %></td>
                            <td><%= portfolio.description %></td>
                            <td>
                                <a href="/editportfolio/<%= portfolio.portfolio_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/deleteportfolio/<%= portfolio.portfolio_id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No portfolio projects found. Go <a href="/addportfolio" >here</a> to add projects.</p>
        <% } %>
    </div>
</div>
</body>
</html>