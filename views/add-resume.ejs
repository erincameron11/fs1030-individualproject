<%- include ('./partials/header.ejs') %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <br><br>
        <h1 class="text-center">Add to Resume</h1>
        <br><br>
        <form class="add-resume-form" action="" method="post" enctype="multipart/form-data">
            <p>Enter your job information below to add a new job item to your resume:</p><br>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="position" id="position" placeholder="Position" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="company" id="company" placeholder="Company" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" maxlength="150" name="description" id="description" placeholder="Description" required>
                </div>
                <div class="col-md-12">
                    <label for="resume-img"><b>Job Logo</b></label><br>
                    <input type="file" name="image" id="resume-img" class="" required>
                </div>
            </div>
            <br><br>
            <button type="submit" class="btn btn-info float-right">Add Job History</button>
        </form>
    </div>
</div>
</body>
</html>